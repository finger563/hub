{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": false,
    "allowJs": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib" : [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "tasks.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
